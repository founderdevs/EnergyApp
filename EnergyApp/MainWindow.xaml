<Window x:Class="EnergyApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Учёт электроэнергии"
        Height="500" Width="800"
        Background="White">

    <Grid Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- ввод -->
            <RowDefinition Height="Auto"/>
            <!-- таблица -->
            <RowDefinition Height="Auto"/>
            <!-- период -->
            <RowDefinition Height="Auto"/>
            <!-- результат -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Ввод данных -->
        <StackPanel Orientation="Horizontal" Margin="0 0 0 10" Grid.Row="0">
            <TextBox x:Name="KilowattInput" Width="120" Margin="0 0 10 0"
                     VerticalContentAlignment="Center" TextAlignment="Center"
                     ToolTip="Введите количество кВт⋅ч"/>
            <TextBox x:Name="CostInput" Width="120" Margin="0 0 10 0"
                     VerticalContentAlignment="Center" TextAlignment="Center"
                     ToolTip="Введите цену за 1 кВт⋅ч"/>
            <Button Content="Добавить" Width="100" Click="AddRecord_Click" Margin="0 0 10 0"/>
            <Button Content="Удалить" Width="100" Click="DeleteRecord_Click"/>
        </StackPanel>

        <!-- Таблица данных -->
        <DataGrid x:Name="EnergyDataGrid" Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  Margin="0 0 0 10"
                  Height="250">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Дата" Binding="{Binding Date, StringFormat=d}" Width="150"/>
                <DataGridTextColumn Header="кВт⋅ч" Binding="{Binding KilowattHours}" Width="100"/>
                <DataGridTextColumn Header="Цена (₽)" Binding="{Binding CostPerKwh}" Width="100"/>
                <DataGridTextColumn Header="Сумма (₽)" Binding="{Binding TotalCost, StringFormat=N2}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Выбор периода -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0 10 0 10">
            <DatePicker x:Name="StartDatePicker" Width="150" Margin="0 0 10 0"/>
            <DatePicker x:Name="EndDatePicker" Width="150" Margin="0 0 10 0"/>
            <Button Content="Посчитать" Width="120" Click="Calculate_Click" Margin="0 0 10 0"/>
            <Button Content="Сохранить чек" Width="150" Click="SaveCheck_Click"/>
        </StackPanel>

        <!-- Результат -->
        <TextBlock x:Name="ResultText" Grid.Row="3"
                   FontSize="16"
                   FontWeight="Bold"
                   TextAlignment="Left"
                   Margin="0 10 0 0"
                   Foreground="DarkBlue"/>

    </Grid>
</Window>