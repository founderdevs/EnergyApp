<Window x:Class="EnergyApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="" Height="400" Width="700"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F0F2F5">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!-- Левая часть с фото -->
        <Border Grid.Column="0" CornerRadius="10" Background="White" Margin="0,0,20,0">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <Ellipse Width="150" Height="150" Margin="10">
                    <Ellipse.Fill>
                        <!-- pack URI ниже — надёжнее, чем относительный путь -->
                        <ImageBrush ImageSource="Assets/user.png" Stretch="UniformToFill"/>
                    </Ellipse.Fill>
                </Ellipse>
                <TextBlock Text="Добро пожаловать!" 
                           FontSize="18" 
                           FontWeight="SemiBold" 
                           HorizontalAlignment="Center"
                           Margin="0,10,0,0"/>
            </StackPanel>
        </Border>

        <!-- Правая часть с формой входа -->
        <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Width="250">
            <TextBlock Text="Логин" Margin="0,0,0,5" />
            <TextBox x:Name="LoginTextBox" Height="30" Margin="0,0,0,15"/>

            <TextBlock Text="Пароль" Margin="0,0,0,5"/>
            <PasswordBox x:Name="PasswordBox" Height="30" Margin="0,0,0,25"/>

            <Button Content="Войти" 
                    Height="35" 
                    Background="#0078D7" 
                    Foreground="White" 
                    FontWeight="Bold"
                    Click="LoginButton_Click"/>
        </StackPanel>
    </Grid>
</Window>